@page
@model AnnouncementRazorPages.Pages.Announcement.IndexModel
@{
    ViewData["Title"] = "Announcement";
}

<h1>Announcements</h1>
<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Description
            </th>
            <th>
                FilePath
            </th>
            <th>
                Created By
            </th>
            <th>
                Created At
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Announcements)
        {
            <tr>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Title)*@
                    @item.Title
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Desciption)
                </td>
                <td>
                    @if (string.IsNullOrWhiteSpace(item.FilePath))
                    {
                        <span>Not Found</span>
                    }
                    else
                    {
                        <a href="pdf/@item.FilePath">Download</a>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">View</a>

                </td>
            </tr>
        }
    </tbody>
</table>



